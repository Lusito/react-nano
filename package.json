{
  "private": true,
  "workspaces": [
    "packages/redux",
    "packages/redux-dynamic-modules",
    "packages/router",
    "packages/tsrux",
    "packages/use-event-source",
    "packages/use-graphql",
    "packages/use-fetch"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "docs:build": "npm run docs:build:base -- \"https://lusito.github.io/react-nano\"",
    "docs:build:base": "rimraf docs-dist && mono-docs . docs-dist",
    "docs:dev": "nodemon --ignore \"docs-dist\" --ignore node_modules --ignore dist -e ts,tsx,md,scss,png,webp --exec \"npm run docs:build:base -- serve\"",
    "lint": "mono-lint",
    "lint:fix": "mono-lint --fix",
    "release": "mono-release",
    "test": "npm test --workspaces --if-present"
  },
  "devDependencies": {
    "@lusito/eslint-config-react": "^2.3.0",
    "@lusito/mono": "^0.9.0",
    "@lusito/mono-docs": "^0.10.0",
    "@lusito/prettier-config": "^2.3.0",
    "eslint-plugin-jest": "^27.2.0",
    "nodemon": "^2.0.20",
    "sort-package-json": "^2.1.0"
  }
}
